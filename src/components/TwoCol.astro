---

const { title, subtitle, description } = Astro.props;
---

<section
  id="hero"
  class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center py-24 md:py-32 px-6 md:px-12 bg-black text-white"
>
  <!-- Left column: Text content -->
  <div class="flex flex-col justify-center space-y-6">
    <h1
      class="font-serif text-6xl sm:text-7xl md:text-8xl font-bold tracking-tightest"
    >
      {title}
    </h1>
    <p
      class="font-serif text-3xl sm:text-4xl md:text-5xl font-semibold text-primary"
    >
      {subtitle}
    </p>
    <p class="text-base md:text-lg text-neutral leading-relaxed">
      {description}
    </p>

  </div>

  <!-- Right column: Image -->
  <div class="relative w-full h-80 md:h-[480px] rounded-2xl overflow-hidden shadow-lg">
    <img
      src="/barcelona.jpg"
      alt="Barcelona skyline"
      class="absolute inset-0 w-full h-full object-cover object-center"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-black/30"></div>
  </div>
</section>
